<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RamirezZuritaJordanGerman.Views.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="30" Spacing="10" >
        <Label Text="Inicio de Sesión" FontSize="32" HorizontalOptions="Center"/>
        <Entry x:Name="usuarioEntry" Placeholder="Usuario"/>
        <Entry x:Name="contrasenaEntry" Placeholder="Contraseña" IsPassword="True"/>
        <Button Text="Ingresar" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>